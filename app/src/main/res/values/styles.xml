<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text style for the "Happy Birthday" and "Lots of cuddles & happy purrs!" - portrait & land -->
    <style name="textStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <!-- Text style for the Name of the Celebrated - portrait & land-->
    <style name="nameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:drawableLeft">@drawable/ic_favorite_black_24dp</item>
        <item name="android:drawableEnd">@drawable/ic_favorite_black_24dp</item>
        <item name="android:drawableRight">@drawable/ic_favorite_black_24dp</item>
        <item name="android:drawableStart">@drawable/ic_favorite_black_24dp</item>
        <item name="android:drawablePadding">@dimen/heartPadding</item>
        <item name="android:text">@string/name</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/great_vibes</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Style of the divider between orange area and violet area - portrait & land -->
    <style name="dividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerSize</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- Style of the background area under the Name of the Celebrated - portrait & land -->
    <style name="bgStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
